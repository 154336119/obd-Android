<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3C444F"
    android:orientation="vertical"
    android:id="@+id/Rl">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TvBankSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:text="测试"
            android:textColor="@color/white"
            android:padding="14dp"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/TvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/IvR"
            android:layout_toRightOf="@+id/IvL"
            android:gravity="center"
            android:padding="14dp"
            android:text="正常"
            android:textColor="@color/google_green"
            android:layout_marginRight="70dp"/>
        <!--<TextView-->
            <!--android:id="@+id/TvDes"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="15sp"-->
            <!--android:text="暂无描述"-->
            <!--android:layout_toRightOf="@+id/TvPID"-->
            <!--android:layout_toLeftOf="@+id/CheckboxConfirmErrorCode"-->
            <!--android:padding="14dp"-->
            <!--android:gravity="center"-->
            <!--android:layout_centerInParent="true"/>-->
        <CheckBox
            android:id="@+id/ck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/checkbox_one"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/TvDes"
        android:layout_alignBottom="@+id/TvDes"
        android:background="#2B3139"
        android:layout_toRightOf="@+id/TvPID"
        />
    <com.slb.ttdandroidframework.weight.MyListView
        android:id="@+id/MyListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></com.slb.ttdandroidframework.weight.MyListView>
</LinearLayout>