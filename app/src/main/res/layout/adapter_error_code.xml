<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#535B67"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00A4EF"
            android:textSize="15sp"
            android:text="请假单"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/TvIntriduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:text="请假请假单请假单请假单请假单请假单请假单请假单请假单请假单请假单单"
            android:layout_toRightOf="@+id/TvCode"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/ck"
            android:layout_marginTop="6dp"/>
        <CheckBox
            android:id="@+id/ck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/checkbox_two"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/TvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@+id/TvCode"
            android:text="请假请假单请假单请假单请假单请假单请假单请假单请假单请假单请假单单"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>