<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2B3139">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
 <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C444F">
            <TextView
                android:id="@+id/Tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前密码"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edCurPw"
                style="@style/edit_padding_10"
                android:completionThreshold="1"
                android:hint="请输入当前密码"
                android:lines="1"
                android:background="#3C444F"
                android:layout_toRightOf="@+id/Tv01"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C444F"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/Tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码    "
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edtNewPw"
                style="@style/edit_padding_10"
                android:completionThreshold="1"
                android:hint="请输入新密码"
                android:lines="1"
                android:background="#3C444F"
                android:layout_toRightOf="@+id/Tv02"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C444F"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/Tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edtAgainPw"
                style="@style/edit_padding_10"
                android:completionThreshold="1"
                android:hint="请确认密码"
                android:lines="1"
                android:background="#3C444F"
                android:layout_toRightOf="@+id/Tv03"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btnComfirm"
            style="@style/btn_bottom_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_30"
            android:text="保存" />
    </LinearLayout>
</LinearLayout>
