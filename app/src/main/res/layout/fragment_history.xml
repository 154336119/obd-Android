<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/mLLcontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_2B3139">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:background="@color/color_3C444F"
         >
          <info.hoang8f.android.segmented.SegmentedGroup
              android:id="@+id/segmented"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_centerInParent="true"
              android:orientation="horizontal"
              segmentedgroup:sc_border_width="1dp"
              segmentedgroup:sc_corner_radius="5dp"
              segmentedgroup:sc_tint_color="@color/color_00A4EF"
              segmentedgroup:sc_unchecked_tint_color="@color/color_00A4EF"
              segmentedgroup:sc_checked_text_color="@color/white">

               <RadioButton
                   android:id="@+id/RbHistoricalDriving"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="历史行车"
                   style="@style/com_green_tab_rb"/>

               <RadioButton
                   android:id="@+id/RbHistoricalFailure"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="历史故障"
                   style="@style/com_green_tab_rb"/>
          </info.hoang8f.android.segmented.SegmentedGroup>
          <TextView
              android:id="@+id/mTvScreen"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:text="筛选"
              android:textSize="15sp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:drawablePadding="10dp"
              android:layout_marginRight="15dp"/>
     </RelativeLayout>
     <FrameLayout
         android:id="@+id/mainFrame"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/color_2B3139"/>
</LinearLayout>
     <LinearLayout
         android:id="@+id/mLLleft"
         android:layout_width="340dp"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_gravity="end"
         android:background="#3C444F"
         android:padding="20dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#636363"
              android:textSize="16sp"
              android:text="OBD选择"/>
          <android.support.v7.widget.RecyclerView
              android:id="@+id/RvObd"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp">
          </android.support.v7.widget.RecyclerView>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:text="车牌号选择"
              android:textColor="#636363"/>
          <android.support.v7.widget.RecyclerView
              android:id="@+id/RvPlateNumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp">
          </android.support.v7.widget.RecyclerView>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="时间段"
              android:textColor="#636363"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:orientation="horizontal">
               <TextView
                   android:id="@+id/TvStartTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_un_choise_iten"
                   android:textColor="#636363"
                   android:paddingRight="@dimen/distance_30"
                   android:paddingLeft="@dimen/distance_30"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp"
                   android:textSize="16sp"
                   android:text="时间段"/>
               <View
                   android:layout_width="20dp"
                   android:layout_height="1dp"
                   android:background="#636363"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"></View>
               <TextView
                   android:id="@+id/TvEndTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_un_choise_iten"
                   android:textColor="#636363"
                   android:paddingRight="@dimen/distance_30"
                   android:paddingLeft="@dimen/distance_30"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp"
                   android:textSize="16sp"
                   android:text="时间段"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_horizontal"
              android:layout_marginTop="40dp"
              android:layout_marginRight="40dp">
               <Button
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:padding="20dp"
                   android:text="重置"
                   android:background="@drawable/bg_choise_lef_btn"/>
               <Button
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:text="确定"
                   android:padding="20dp"
                   android:background="@drawable/bg_choise_right_btn"/>
          </LinearLayout>
     </LinearLayout>
</android.support.v4.widget.DrawerLayout>